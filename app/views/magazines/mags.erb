<h1 class="my-4 page-title">All Magazines</h1>

<div class="row">
  <% @mags.each do |mag| %>
    <div class="col-lg-4 col-sm-6 portfolio-item">
      <div class="card h-100">
        <!-- <a href="#"><img class="card-img-top"></a> -->
        <div class="card-body">
          <h4 class="card-title">
            <%= mag.name %>
          </h4>

          <dl class="card-text">
            <dt>Year/Month:  </dt>
            <dd><%= mag.year %>/<%= mag.month %></dd>
            <dt>Cover: </dt>
            <dd><%= mag.cover %></dd>
            <dt>Condition: </dt>
            <dd><%= mag.condition %></dd>
            <dt>Notes: </dt>
            <dd><%= mag.notes %></dd>
            <dt>Owner: </dt>
            <dd><%= mag.user.username %></dd>
          </dl>
          <dl class="">
            <dt>
              <dd>
                <% if logged_in? %>
                  <% if mag.user_id == current_user.id %>
                  <input type="button" class="btn btn-info" value="Edit" onclick="location.href = '/magazines/<%= mag.id %>/edit';">
                  <% end %>
                <% end %>
              </dd>
            </dt>

          </dl>

        </div>
      </div>
    </div>
  <% end %>
</div>
